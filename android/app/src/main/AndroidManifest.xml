<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iitg_speech_lab">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutUs"
            android:parentActivityName=".Master"/>
        <activity android:name=".FAQ"
            android:parentActivityName=".Master"/>
        <activity android:name=".AddFaq" />
        <activity android:name=".EditHomePageDetails" />
        <activity android:name=".ProjectDetails" />
        <activity android:name=".Projects" />
        <activity android:name=".EditProfile" />
        <activity android:name=".PrivateProfileDetails" />
        <activity android:name=".PublicProfileDetails" />
        <activity
            android:name=".ContactUs"
            android:parentActivityName=".Master" />
        <activity
            android:name=".Master"
            android:label="@string/title_activity_master"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewPeople"
            android:parentActivityName=".Master" />
        <activity
            android:name=".CoursesActivity"
            android:label="@string/title_activity_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewCourse"
            android:label="@string/title_activity_view_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Discussion_Notice_Board" />
        <activity
            android:name=".DisplayMessageActivity"
            android:parentActivityName=".MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>