<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ContactUsDetailField">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ContactUsDetail">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="QuestionFAQ">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="AnswerFAQ">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AboutUs">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="AboutUsDetail">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="EditAboutUs">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="EditAboutUsDetail">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="EditContactUs">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="EditContactUsDetail">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AddProject">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="AddProjectDetail">
        <item name="android:textSize">20dp</item>
    </style>

</resources>
